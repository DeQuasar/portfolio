{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "husky",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:ci": "pnpm run test:unit",
    "test:changed": "vitest --changed --run",
    "test:smoke": "vitest run tests/external-link-guard.spec.ts",
    "test:ui:container": "PLAYWRIGHT_UID=$(id -u) PLAYWRIGHT_GID=$(id -g) docker compose -f docker-compose.playwright.yml run --rm playwright",
    "pretest:e2e": "if [ \"$SKIP_GENERATE\" != \"1\" ]; then pnpm generate; fi",
    "test:e2e": "playwright test",
    "pretest:e2e:ci": "if [ \"$SKIP_GENERATE\" != \"1\" ]; then pnpm generate; fi",
    "test:e2e:ci": "playwright test --reporter=line",
    "test:coverage": "vitest run --coverage",
    "pretest:performance": "if [ \"$SKIP_GENERATE\" != \"1\" ]; then pnpm generate; fi",
    "test:performance": "node ./scripts/run-lhci.mjs autorun",
    "prebuild": "nuxt prepare",
    "predev": "nuxt prepare"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.1.9",
    "@nuxt/content": "^3.7.1",
    "@vueuse/core": "^11.3.0",
    "better-sqlite3": "^12.2.0",
    "nuxt": "^3.19.2",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@cloudflare/workers-types": "^4.20251003.0",
    "@lhci/cli": "^0.15.1",
    "@nuxt/test-utils": "^3.19.2",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright-core": "^1.55.1",
    "tailwindcss": "^4.0.0",
    "vitest": "^3.2.4"
  }
}
