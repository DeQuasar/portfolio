    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.19.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "axe-core": "^4.10.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
