{
  "ci": {
    "collect": {
      "startServerCommand": "node ./scripts/local-preview.mjs --dir ./.output/public --host 127.0.0.1 --port 4300",
      "startServerReadyPattern": "Local preview listening",
      "startServerReadyTimeout": 120000,
      "url": [
        "http://127.0.0.1:4300/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "chromeFlags": [
          "--headless=new",
          "--no-sandbox",
          "--disable-dev-shm-usage",
          "--disable-features=BackForwardCache",
          "--disable-setuid-sandbox",
          "--single-process",
          "--disable-gpu"
        ]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["warn", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "reports/lighthouse"
    }
  }
}
